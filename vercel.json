{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.12"
    }
  },
  "env": {
    "DATABASE_URL": "postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME",
    "JWT_SECRET": "CHANGE_ME",
    "JWT_ALGORITHM": "HS256"
  }
}
