{
  "version": 2,
  "builds": [
    { "src": "deploy/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "deploy/index.py" }
  ],
  "env": {
    "DATABASE_URL": "postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME",
    "JWT_SECRET": "CHANGE_ME",
    "JWT_ALGORITHM": "HS256"
  }
}
  